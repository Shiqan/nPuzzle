<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.ferron.saan"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Mytheme" >
        
        <activity
            android:name="nl.ferron.saan.NavDrawerActivity"
            android:label="@string/app_name">
		</activity>
		
        <activity
            android:name="nl.ferron.saan.MainActivity"
            android:label="@string/app_name">
		</activity>
                    
        <activity
            android:name="nl.ferron.saan.ChooseImageActivity"
            android:label="@string/loadimg" />
        
        <activity
            android:name="nl.ferron.saan.HighscoreActivity"
            android:label="@string/highscore" />
        
        <activity
            android:name="nl.ferron.saan.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                 <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
        
        <activity
            android:name="nl.ferron.saan.GameActivity"
            android:label="@string/gameacitvity"
            android:screenOrientation="portrait" />
                
    </application>

</manifest>
